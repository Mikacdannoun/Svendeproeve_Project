generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "mysql"
}

// En fighter / udøver
model Athlete {
  id        Int      @id @default(autoincrement())
  name      String
  createdAt DateTime @default(now())
  sessions  Session[]
}

// En trænings eller kamp session (med video)
model Session {
  id        Int      @id @default(autoincrement())
  athlete   Athlete  @relation(fields: [athleteId], references: [id])
  athleteId Int
  videoUrl  String
  notes     String?  // valgfrit
  createdAt DateTime @default(now())
}
